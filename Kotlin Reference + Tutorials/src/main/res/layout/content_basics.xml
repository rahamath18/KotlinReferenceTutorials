<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/SCROLLER_ID2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.test.kotlintutorial.BasicsActivity"
        tools:showIn="@layout/activity_basics"
    android:background="@drawable/kotlingalexybg">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtTopicBasics"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/topicBasics"
                android:textAllCaps="false"
                android:textColor="@color/colorForTxt002"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="5dp" />
            <Button
                android:id="@+id/btnBasicTypes"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/labelBasicTypes"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="@color/colorLightBlue"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtTopicBasics"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btnPackages"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/labelPackages"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="@color/colorLightBlue"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnBasicTypes"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btnControlFlow"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/labelControlFlow"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="@color/colorLightBlue"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnPackages"
                android:layout_marginTop="5dp"/>

            <Button
                android:id="@+id/btnReturnsandJumps"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="@string/labelReturnsandJumps"
                android:textAllCaps="false"
                android:gravity="left|center_vertical"
                android:background="@color/colorLightBlue"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnControlFlow"
                android:layout_marginTop="5dp"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

