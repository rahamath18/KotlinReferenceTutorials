<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/SCROLLER_ID2"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:scrollbars="vertical"
android:fillViewport="true"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context="com.test.kotlintutorial.JavaCodeVsKotlinCodeActivity"
tools:showIn="@layout/activity_java_code_vs_kotlin_code"
    android:background="@drawable/kotlingalexybg">

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTopicJavaCodeVsKotlinCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/topicJavaCodeVsKotlinCode"
        android:textAllCaps="false"
        android:textColor="@color/colorForTxt002"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/btnDatatypesJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelDatatypesJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTopicJavaCodeVsKotlinCode"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnmainmethodJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelmainmethodJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDatatypesJavavsKotlin"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnmethodwithreturntypeJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelmethodwithreturntypeJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnmainmethodJavavsKotlin"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnPOJOJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelPOJOJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnmethodwithreturntypeJavavsKotlin"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnSingletonJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelSingletonJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPOJOJavavsKotlin"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnInterfaceJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelInterfaceJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSingletonJavavsKotlin"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnAbstractJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelAbstractJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnInterfaceJavavsKotlin"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnInnerClassJavavsKotlin"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="@string/labelInnerClassJavavsKotlin"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="@color/colorLightBlue"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAbstractJavavsKotlin"
        android:layout_marginTop="5dp"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>
